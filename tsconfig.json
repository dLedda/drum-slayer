{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "esnext",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "assets/*": ["assets/*"]
    },
    "jsxFactory": "h",
    "jsxFragmentFactory": "frag",
    "jsx": "react"
  },
  "include": [
    "./src/**/*",
    "./assets/**/*"
  ]
}
